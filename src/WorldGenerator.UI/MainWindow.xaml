<Window x:Class="WorldGenerator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldGenerator.UI"
        mc:Ignorable="d"
        xmlns:VM="clr-namespace:WorldGenerator.UI.ViewModels"
        Title="MainWindow" Width="600" Height="400">
    <Window.DataContext>
        <VM:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding PointCount, Mode=TwoWay}"></TextBox>
        <Label Grid.Row="1" VerticalAlignment="Top">Points:</Label>
        <Button Command="{Binding GeneratePointsCommand}" Grid.ColumnSpan="2" VerticalAlignment="Bottom">Generate</Button>


    </Grid>
</Window>
